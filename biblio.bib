@InProceedings{ZyskindNathanPentland2015,
  author    = {Zyskind, Guy and Nathan, Oz and Pentland, Alex},
  title     = {Decentralizing Privacy: Using Blockchain to Protect Personal Data},
  booktitle = {Security and Privacy Workshops (SPW), 2015 IEEE},
  year      = {2015},
  pages     = {180--184},
  abstract  = {The recent increase in reported incidents of surveillance and security breaches compromising users’ privacy call into question the current model, in which third-parties collect and control massive amounts of personal data. Bitcoin has demonstrated in the financial space that trusted, auditable computing is possible using a decentralized network of peers accompanied by a public ledger. In this paper, we describe a decentralized personal data management system that ensures users own and control their data. We implement a protocol that turns a blockchain into an automated access-control manager that does not require trust in a third party. Unlike Bitcoin, transactions in our system are not strictly financial – they are used to carry instructions, such as storing, querying and sharing data. Finally, we discuss possible future extensions to blockchains that could harness them into a well-rounded solution for trusted computing problems in society.},
  comment   = {Privacy problem : Through the exemple of a mobile platform offering a choice of applications to its users, the author proposes a system that gives the latest back the ownership of their data, the knowledge of what is being collected and the possibility to enforce a fine grained access control on them, including revocation of previously accorded priviledges. Solution : The system comprises three entities : the users, the party providing the applications and the nodes that maintain the blockchain. It accepts two kinds of transactions T_{access} for access control management, and T_{data} for data storage and retrieval. A shared (compound) identity is created for each user/service pair. The user is the owner of this identity, the service is a guest and has limited access to it. It is comprised of a shared private encryption key and a pair of public/private signing key for each. The identity, or rather the public signing keys, is then sent to the blockchain with its associated permissions via a T_{access} transaction. Data are encrypted using the shared encryption key and send to the blockchain using a T_{data} transaction. Upon reception, the data are stored in a off-blockchain hashtable, the public ledger only retaining a hash of it. User and service can request the data via a T_{data} transaction containing the pointer (its hash) to the data. The blockchain verifies the signature and the access rights for each request. The user can change the permissions by issuing a new T_{access} transaction. Sending an empty set of permission will revoked all access rights. The privacy and security of the system relies on the user informed management of their keys. This doesn't prevent a node from tampering with the data. But sufficient replication and distribution should ensure that if enough nodes are consulted, the integrity should be assured. The author proposes a reputation system as an alternative for the proof of work. Not adressed : Nature of incentives to maintain the blockchain.},
  file      = {:Articles/2015_Zyskind_Decentralizing Privacy Using Blockchain to Protect Personal Data.pdf:PDF},
  timestamp = {2019-01-16},
}

